<% content_for :title do %>IBM dashboard<% end %>

<div class="gridster">
  <ul>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-view="Image" data-image="/bks-snow.png" data-text="Dashboard IBM" style="background-color:#ffffff;"></div>
    </li>

    <li data-row="1" data-col="2" data-sizex="1" data-sizey="1">
      <div data-view="Clock" style="background-color:#96bf48;"></div>
      <i class="icon-time icon-background"></i>
    </li>

    <li data-row="1" data-col="3" data-sizex="1" data-sizey="1">
      <div data-id="incident_ibm_grp" data-view="Milkman" data-title="Incidents"></div>
    </li>

    <li data-row="1" data-col="4" data-sizex="1" data-sizey="1">
      <div data-id="incident_ibm_grppie" data-view="Pie" data-title="Groupes"></div>
    </li>

    <li data-row="2" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="incident-vip" data-view="Table" data-title="Incidents VIP" data-moreinfo="# incident (VIP Priority 1 and 2)"></div>
    </li>

    <li data-row="2" data-col="3" data-sizex="2" data-sizey="1">
      <div data-id="incident_ibm_det" data-view="Incidents" data-moreinfo="Major incidents in ServiceNow"></div>
      <i class="icon-power-off icon-background"></i>
    </li>

    <li data-row="3" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="incident-ibm-backlog" data-view="Backlog" data-graphtype="bar" data-title="Backlog OSS" data-cumulated="true" style="background-color:#968818"></div>
      <i class="icon-exclamation-sign icon-background"></i>
    </li>

    <li data-row="3" data-col="3" data-sizex="2" data-sizey="1">
      <div data-id="incident-ibm-ossload" data-view="Barista" data-unordered="true" data-title="Charge OSS" data-moreinfo="Backlog par OSS" style="background-color:#96bf48;"></div>
      <i class="icon-exclamation-sign icon-background"></i>
    </li>

  </ul>
</div>
